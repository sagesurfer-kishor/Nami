<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_img"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_gravity="center"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="19dp"
                android:background="@drawable/vivd_home_rounded_rectangle"
                android:gravity="center">

                <TextView
                    android:id="@+id/txtHotlineTiltle_user_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/crisis_hotline"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txtHotlinenumber_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@id/txtHotlineTiltle_user_home"
                    android:hint="1-800-273-8255"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="21dp"
                android:text="@string/stories_of_hope"
                android:textColor="@color/white" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/quote_list"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/activity_vertical_margin" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="31dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/crisis_home_linear_layout"
                    android:layout_width="158dp"
                    android:layout_height="158dp"
                    android:layout_margin="@dimen/activity_vertical_margin"
                    android:layout_weight="1"
                    android:background="@drawable/crisis_home_background"
                    android:orientation="vertical"
                    android:weightSum="3">

                    <Button
                        android:id="@+id/btncrisis_home"
                        android:layout_width="14dp"
                        android:layout_height="0dp"
                        android:layout_gravity="right"
                        android:layout_margin="6dp"
                        android:layout_weight="0.4"
                        android:background="@drawable/pink_circle"
                        android:gravity="center"
                        android:visibility="invisible" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgcrisis_home"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.3"
                        android:src="@drawable/crisis_home_icon" />

                    <TextView
                        android:id="@+id/txtcrisis_home"
                        style="@style/CustomFontStylePrimary"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:layout_weight="1.1"
                        android:gravity="center"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:text="Crisis"
                        android:textColor="@color/text_color_tertiary"
                        android:textSize="12sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.2" />
                </LinearLayout>


                <LinearLayout

                    android:id="@+id/imfeeling_home_linear_layout"

                    android:layout_width="158dp"
                    android:layout_height="158dp"
                    android:layout_margin="@dimen/activity_vertical_margin"
                    android:layout_weight="1"
                    android:background="@drawable/imfeeling_home_background"
                    android:orientation="vertical"
                    android:weightSum="3">

                    <Button
                        android:id="@+id/btnimfeeling_home"
                        android:layout_width="14dp"
                        android:layout_height="0dp"
                        android:layout_gravity="right"
                        android:layout_margin="6dp"
                        android:layout_weight="0.4"
                        android:background="@drawable/pink_circle"
                        android:gravity="center"
                        android:visibility="invisible" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgimfeeling_home"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.3"
                        android:src="@drawable/imfeeling_home_icon" />

                    <TextView
                        android:id="@+id/txtimfeeling_home"
                        style="@style/CustomFontStylePrimary"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:layout_weight="1.1"
                        android:gravity="center"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:text="I'm Feeling"
                        android:textColor="@color/text_color_tertiary"
                        android:textSize="12sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.2" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/community_home_linear_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="158dp"
                    android:layout_height="158dp"
                    android:layout_margin="@dimen/activity_vertical_margin"
                    android:layout_weight="1"
                    android:background="@drawable/community_home_background"
                    android:orientation="vertical"
                    android:weightSum="3">

                    <Button
                        android:id="@+id/btncommunnity_home"
                        android:layout_width="17dp"
                        android:layout_height="0dp"
                        android:layout_gravity="right"
                        android:layout_margin="6dp"
                        android:layout_weight="0.4"
                        android:background="@drawable/pink_circle"
                        android:gravity="center"
                        android:visibility="invisible" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgcommunity_home"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.3"
                        android:src="@drawable/community_home_icon" />

                    <TextView
                        android:id="@+id/txtcommunity_home"
                        style="@style/CustomFontStylePrimary"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:layout_weight="1.1"
                        android:gravity="center"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:text="Community"
                        android:textColor="@color/text_color_tertiary"
                        android:textSize="12sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.2" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/uplift_home_linear_layout"
                    android:layout_width="158dp"
                    android:layout_height="158dp"
                    android:layout_margin="@dimen/activity_vertical_margin"
                    android:layout_weight="1"
                    android:background="@drawable/uplift_home_background"
                    android:orientation="vertical"
                    android:weightSum="3">

                    <Button
                        android:id="@+id/btnuplift_home"
                        android:layout_width="14dp"
                        android:layout_height="0dp"
                        android:layout_gravity="right"
                        android:layout_margin="6dp"
                        android:layout_weight="0.4"
                        android:background="@drawable/pink_circle"
                        android:gravity="center"
                        android:visibility="invisible" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imguplift_home"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.3"
                        android:src="@drawable/uplift_home_icon" />

                    <TextView
                        android:id="@+id/txtuplift_home"
                        style="@style/CustomFontStylePrimary"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:layout_weight="1.1"
                        android:gravity="center"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:text="Uplift"
                        android:textColor="@color/text_color_tertiary"
                        android:textSize="12sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.2" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/positive_home_linear_layout"
                    android:layout_width="158dp"
                    android:layout_height="158dp"
                    android:layout_margin="@dimen/activity_vertical_margin"
                    android:layout_weight="1"
                    android:background="@drawable/positive_home_background"
                    android:orientation="vertical"
                    android:weightSum="3">

                    <Button
                        android:id="@+id/btnpositive_home"
                        android:layout_width="14dp"
                        android:layout_height="0dp"
                        android:layout_gravity="right"
                        android:layout_margin="6dp"
                        android:layout_weight="0.4"
                        android:background="@drawable/pink_circle"
                        android:gravity="center"
                        android:visibility="invisible" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgpositive_home"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.3"
                        android:src="@drawable/positivequotes_home_icon" />

                    <TextView
                        android:id="@+id/txtpositive_home"
                        style="@style/CustomFontStylePrimary"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:layout_weight="1.1"
                        android:gravity="center"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:text="@string/positive_quotes"
                        android:textColor="@color/text_color_tertiary"
                        android:textSize="12sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.2" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/todolist_home_linear_layout"
                    android:layout_width="158dp"
                    android:layout_height="158dp"
                    android:layout_margin="@dimen/activity_vertical_margin"
                    android:layout_weight="1"
                    android:background="@drawable/todolist_home_background"
                    android:orientation="vertical"
                    android:weightSum="3">

                    <Button
                        android:id="@+id/btntodolist_home"
                        android:layout_width="14dp"
                        android:layout_height="0dp"
                        android:layout_gravity="right"
                        android:layout_margin="6dp"
                        android:layout_weight="0.4"
                        android:background="@drawable/pink_circle"
                        android:gravity="center"
                        android:visibility="invisible" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgtodolist_home"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.3"
                        android:src="@drawable/todolist_home_icon" />

                    <TextView
                        android:id="@+id/txttodolist_home"
                        style="@style/CustomFontStylePrimary"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:layout_weight="1.1"
                        android:gravity="center"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:text="@string/to_do_list"
                        android:textColor="@color/text_color_tertiary"
                        android:textSize="12sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.2" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>
</LinearLayout>
