<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_header_layout"
    android:layout_width="match_parent"
    android:layout_height="160dp"

    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/btnEditProfile"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="end"
            android:layout_marginTop="25dp"
            android:layout_marginRight="5dp"
            android:background="#FFFFFF"
            android:src="@drawable/settings_green" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:layout_marginTop="16dp">

                    <com.sagesurfer.nami.views.Circle
                        android:id="@+id/nav_header_circle"
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:layout_centerInParent="true" />

                    <ImageView
                        android:id="@+id/nav_header_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_user_male" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nav_header_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="start"
                        android:paddingLeft="10dp"
                        android:text="Victor N. Tidwell"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/text_color_tertiary"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/nav_header_role"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/globe_gray"
                        android:drawablePadding="10dp"
                        android:gravity="start"
                        android:paddingLeft="10dp"
                        android:text="@string/language"
                        android:textColor="@color/green"
                        android:textSize="14sp" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


        <View
            android:id="@+id/setp_two_line_view_first"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:background="@color/text_color_tertiary" />

    </LinearLayout>


</RelativeLayout>
