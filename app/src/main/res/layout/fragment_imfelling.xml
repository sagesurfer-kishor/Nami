<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/mood_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:weightSum="2">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomnav_left"
            android:layout_width="0dp"
            android:layout_height="68dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="@color/text_color_tertiary"
            app:elevation="0dp"
            app:itemIconTint="@color/transparent_40"
            app:itemTextColor="@color/white"
            app:menu="@menu/menu_mood_journal_stats" />


        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomnav_right"
            android:layout_width="0dp"
            android:layout_height="68dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="@color/text_color_tertiary"
            app:elevation="0dp"
            app:itemIconTint="@color/transparent_40"
            app:itemTextColor="@color/white"
            app:menu="@menu/menu_mood_calender_more" />
    </LinearLayout>

</LinearLayout>
